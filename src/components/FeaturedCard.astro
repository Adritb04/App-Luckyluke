---
interface Props {
	name: string;
	price: string;
	description: string;
	image?: string;
	emoji?: string;
	color?: string;
}

const {
	name,
	price,
	description,
	image,
	emoji = "",
	color = "text-red-600",
} = Astro.props;
---

<article class="border border-white/15 bg-black/40 rounded-xl overflow-hidden hover:border-red-600/50 transition-all duration-300">
	<div class="relative aspect-square">
		{image ? (
			<img
				src={image}
				alt={name}
				class="absolute inset-0 w-full h-full object-cover"
				loading="lazy"
			/>
		) : (
			<div class="absolute inset-0 flex items-center justify-center bg-gray-800 text-white/60">
				Imagen no disponible
			</div>
		)}
	</div>

	<div class="p-4 md:p-5">
		<div class="flex items-center justify-between gap-4 mb-3">
			<h3 class={`text-xl md:text-2xl font-bold ${color}`}>
				{name}{emoji}
			</h3>
			<span class="text-lg md:text-xl text-white font-semibold">
				{price}
			</span>
		</div>

		<p class="text-sm md:text-base text-white/80">
			{description}
		</p>
	</div>
</article>
