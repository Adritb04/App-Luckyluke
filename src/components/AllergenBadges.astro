---
// Allergen Badge Component
interface Props {
	allergens: string[];
	className?: string;
}

const { allergens, className = '' } = Astro.props;

const allergenColors: Record<string, string> = {
	'Gluten': 'bg-red-700',
	'Huevo': 'bg-yellow-700',
	'Lácteos': 'bg-green-600',
	'Soja': 'bg-blue-600',
	'Sésamo': 'bg-stone-700',
	'Sulfitos': 'bg-gray-600',
	'Mostaza': 'bg-amber-600',
	'Apio': 'bg-lime-700',
	'Cacahuetes': 'bg-orange-700',
	'Frutos secos': 'bg-orange-600',
};
---

{allergens.length > 0 && (
	<div class={`flex flex-wrap gap-2 ${className}`}>
		{allergens.map(allergen => (
			<span 
				class={`${allergenColors[allergen] || 'bg-gray-600'} text-white text-xs px-2 py-1 rounded`}
				title={`Contiene: ${allergen}`}
			>
				{allergen}
			</span>
		))}
	</div>
)}
